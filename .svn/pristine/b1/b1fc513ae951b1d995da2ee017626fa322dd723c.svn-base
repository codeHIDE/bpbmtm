                    	 }
                    	 String batchId = sb.substring(0,sb.indexOf("|"));
                    	 sb = sb.delete(0, sb.indexOf("|")+1);
                    	 sb = sb.delete(0, sb.indexOf("|")+1);
                    	 sb = sb.delete(0, sb.indexOf("|")+1);
                    	 sb = sb.delete(0, sb.indexOf("|")+1);
                    	 sb = sb.delete(0, sb.indexOf("|")+1);
